#!/usr/bin/env bash

set -o errexit
set -o pipefail
set -o nounset
# set -o xtrace

# Install a local copy of an existing site.

NAME=''
ALIAS=''
HOSTS=true
SERVER=true

# Allow flag to override config.
while getopts "a:hs" OPTION
do
  case $OPTION in
    a)
      ALIAS="$OPTARG"
      ;;
    h)
      HOSTS=false
      ;;
    s)
      SERVER=false
      ;;
  esac
done

NAME=${@:$OPTIND:1}

if [ -z "$NAME" ]; then
  echo "Usage: compro-existing -options reponame"
  exit 1
fi

# Pull the repo down into a dir named $NAME (dl will prompt for branch).
compro-dl -r ${NAME}

# Get in there!
cd ${NAME}

# Logic to determine whether server and hosts should run.
if [ "$HOSTS" == true ]; then
  compro-hosts
fi

if [ "$SERVER" == true ]; then
  compro-server
fi

# Make a database to hold the sync.
compro-db

# Prep sites directories.
compro-prep

# Make a settings.php file (with the flags and stuff).
compro-settings

# Prompt for the preferred sync alias
if [ ${#ALIAS} == 0 ]; then
  echo "Please choose a drush alias to get the db/files from:"
  ALIAS=$(compro-aliases)
fi

# Sync from a chosen alias
WHICHDRUSH=$(which drush6)
if [ ${#WHICHDRUSH} -gt 6 ]; then
  drush6 sql-sync ${ALIAS} default
  drush6 rsync ${ALIAS}:%files default:%files
else
  drush sql-sync ${ALIAS} default
  drush rsync ${ALIAS}:%files default:%files
fi

# Flush the caches
drush cc all

# Filesystem
compro-fs

# uli
drush uli

compro-alias

cd ..
echo "Done."
exit 0
