#!/usr/bin/env bash

set -o errexit
set -o pipefail
set -o nounset
# set -o xtrace

cat<<EOF

  ██████╗ ██████╗ ███╗   ███╗██████╗ ██████╗  ██████╗
 ██╔════╝██╔═══██╗████╗ ████║██╔══██╗██╔══██╗██╔═══██╗
 ██║     ██║   ██║██╔████╔██║██████╔╝██████╔╝██║   ██║
 ██║     ██║   ██║██║╚██╔╝██║██╔═══╝ ██╔══██╗██║   ██║
 ╚██████╗╚██████╔╝██║ ╚═╝ ██║██║     ██║  ██║╚██████╔╝
  ╚═════╝ ╚═════╝ ╚═╝     ╚═╝╚═╝     ╚═╝  ╚═╝ ╚═════╝

EOF

NAME=''
BITBUCKET=0
INSTALL=true
BRANCH='master'
CORE='7'

# Allow flag to override config.
while getopts "bg:x" OPTION
do
  case $OPTION in
    b)
      BITBUCKET=1
      ;;
    g)
      BRANCH="$OPTARG"
      ;;
    x)
      INSTALL=false
      ;;
  esac
done

NAME=${@:$OPTIND:1}

# Check if we should assume d8
if [ ${BRANCH:0:1} == "8" ]; then
  CORE='8'
fi

if [ -z "$NAME" ]; then
  echo "Usage: compro-site -options projectname"
  exit 1
fi

# Uninstall a whole site (ideally not erroring out if partially uninstalled)
if [ "$INSTALL" = false ]; then
  if [ -d ${NAME} ]; then
    echo "Uninstalling site ${NAME}"
    cd ${NAME}
    drush archive-dump || true
    compro-db -x || true
    compro-server -x || true
    compro-hosts -x
    cd ..
    sudo rm -rf ${NAME}
    exit 0
  else
    echo "No site of that name exists in this directory."
    exit 1
  fi
fi

# Install a site. Run all the commands in order.
compro-make -g ${BRANCH} ${NAME}

cd ${NAME}
compro-alias -c ${CORE}
compro-prep
compro-db
compro-install
compro-fs
compro-server
compro-hosts
compro-git

if [ $BITBUCKET = 1 ]; then
  compro-bitbucket
fi

# Finish up.
drush @${NAME}.dev-${USER} uli maintenance /
cd ..
echo "Done."
exit 0
