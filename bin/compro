#!/usr/bin/env bash

if [ -z $1 ]; then
  echo "Usage: compro [command] arguments"
  echo "Commands:"
  echo "  alias     - Add a drush alias to a site"
  echo "  bitbucket - Create/push a bitbucket repo"
  echo "  ctf       - Generate a feature for content"
  echo "  db        - Create a mysql db for a site"
  echo "  fs        - Set sensible file permissions"
  echo "  git       - init and commit to a git repo"
  echo "  hosts     - Add the site to the hosts file"
  echo "  install   - install a site with drush"
  echo "  make      - download compro_install_profile"
  echo "  prep      - create sites/default stuff"
  echo "  server    - Add virtualhost to web server"
  exit 0
fi

# Not super happy about this.
eval 'compro-'"$@"
