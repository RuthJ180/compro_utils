#!/usr/bin/env bash

set -o errexit
set -o pipefail
set -o nounset
# set -o xtrace

# Help info.
THIS="compro-sync"
DESC="Grab a site's db/files from one of the remote drush aliases."
USAGE="compro-sync"
declare -A FLAGS
FLAGS=(
  [a]="Specify the alias ahead of time (otherwise interactive)"
  [h]="Get help info"
)

ALIAS=''

# Allow flag to override config.
while getopts "a:h" OPTION
do
  case $OPTION in
    a)
      ALIAS="$OPTARG"
      ;;
    h)
      echo "### ${THIS}

${DESC}

#### Usage

  > ${USAGE}

#### Flags
"
      for i in "${!FLAGS[@]}"
      do
        echo "**$i** ${FLAGS[$i]}"
      done
      echo ""
      exit 0
      ;;
  esac
done

# Prompt for the preferred sync alias
if [ ${#ALIAS} == 0 ]; then
  echo "Please choose a drush alias to get the db/files from:"
  ALIAS=$(compro-aliases)
fi

# Sync from a chosen alias
drush sql-sync -y ${ALIAS} default
drush -y rsync ${ALIAS}:%files default:%files || echo "Rsync failed. Probably a file permissions issue"

# Update Drupal db
drush updatedb -y

# Revert features
drush fra -y

# Flush the caches
drush cc all

# Display a login link in case that's desired by the user.
drush uli

exit 0
